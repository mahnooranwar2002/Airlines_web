<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Airline Management System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/Adminpanel/css/dashboard_style.css">
    <style>
        .home-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            color:white;
        }

        .profile-dropdown {
            position: relative;
            display: inline-block;
            cursor: pointer;
        }

        .profile-item {
            display: flex;
            align-items: center;
            margin-bottom: 5px;
            gap:7px; 
        }

        .profile-img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover; 
        }

        .profile-name {
            font-weight: bold;
            color: white;
        }

        .profile-dropdown i {
            font-size: 18px;
            color: white;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            border-radius: 4px; 
            overflow: hidden; 
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                transition: background-color 0.3s ease, color 0.3s ease; 
            }

                .dropdown-content a:hover {
                    background-color: #10b981; 
                    color: white;   
                }

        .profile-dropdown:hover .dropdown-content {
            display: block;
        }


    </style>
</head>
<body>
    
    <!-- sidebar -->
    <div class="sidebar close">
        <div class="logo-details">

            <i class='bx-lg bx bxs-rocket bx-tada-hover'><a href="@Url.Action("index", "admin")"></a></i>
            <span class="logo_name"><a href="@Url.Action("index", "admin")"></a>Admin Panel</span>
        </div>
        <ul class="nav-links">
            <li>
                <a href="@Url.Action("admin_details","admin")" class="sidebar-link">
                    <i class='bx bxs-user-check'></i>
                    <span class="link_name">Admin</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("admin_details","admin")">Admin</a></li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("user_details","admin")" class="sidebar-link">
                    <i class='bx bxs-user'></i>
                    <span class="link_name">User</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("user_details","admin")">User</a></li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("plan_details","admin")" class="sidebar-link">
                    <i class='bx bxs-plane-alt'></i>
                    <span class="link_name">Aeroplane</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("plan_details","admin")">Aeroplane</a></li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("country_details","admin")" class="sidebar-link">
                    <i class='bx bx-globe'></i>
                    <span class="link_name">Country</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("country_details","admin")">Country</a></li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("cities_details","admin")" class="sidebar-link">
                    <i class='bx bxs-location-plus'></i>
                    <span class="link_name">City</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("cities_details","admin")">City</a></li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("flight_details","admin")" class="sidebar-link">
                    <i class='bx bxs-plane-take-off'></i>
                    <span class="link_name">Flight</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("flight_details","admin")">Flight</a></li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("packages_details","admin")" class="sidebar-link">
                    <i class='bx bxs-shopping-bag-alt'></i>
                    <span class="link_name">Packages</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("packages_details","admin")">Packages</a></li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("staff_details","admin")" class="sidebar-link">
                    <i class='bx bxs-group'></i>
                    <span class="link_name">Staff</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("staff_details","admin")">Staff</a></li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("bookingTicket","admin")" class="sidebar-link">
                    <i class='bx bx-bookmark-plus'></i>
                    <span class="link_name">Booking </span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("bookingTicket","admin")">Booking</a></li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("Packagesbooked_details","admin")" class="sidebar-link">
                    <i class='bx bx-bookmark-alt-minus'></i>
                    <span class="link_name">Packages Booking </span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("Packagesbooked_details","admin")">Packages Booking</a></li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("contact_details","admin")" class="sidebar-link">
                    <i class='bx bxs-phone'></i>
                    <span class="link_name">Contact </span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("contact_details","admin")">Contact</a></li>
                </ul>
            </li>
        </ul>
    </div>

    <!-- main section -->
    <section class="home-section">
        <div class="home-content">
            <i class='bx bx-menu'></i>
            <span class="text">Shopses</span>
                
            <div class="profile-dropdown">
                @foreach (var data in Model.admin_record)
                    {
                    <div class="profile-item">
                        <img src="@Url.Content("~/adminimages/" + data.admin_Image)" alt="Profile Image" class="profile-img" />
                    
                   
                        <span class="profile-name">@data.admin_name</span>
                        <p></p>

                        <i class='bx bx-chevron-down'></i>
                    </div>
                       
                        
                <div class="dropdown-content">
                        <a href="@Url.Action("update_admin","Admin",new{id=data.id})">Profile</a>
                    <a href="@Url.Action("admin_logout","Admin")">logout</a>
               
                </div>
                }
            </div>


        </div>
        @RenderBody()
    </section>

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script> <!-- Full version -->
    <script>
        $(document).ready(function () {
            let sidebar = $(".sidebar");
            let sidebarBtn = $(".bx-menu"); 
            sidebarBtn.on("click", function () {
                sidebar.toggleClass("close");
            });

            // Arrow toggle for submenu
            $(".nav-links .sidebar-link").on("click", function () {
                $(this).find(".arrow").toggleClass("active");
                $(this).siblings().find(".arrow").removeClass("active"); 
                $(this).siblings().find(".sub-menu").slideUp(); 
                $(this).next(".sub-menu").slideToggle(); 
            });
        });
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
