@{
    Layout = "../shared/staffDashboardlayout.cshtml";
}
@if (TempData["flight_added"] != null)
{
    <script>
        alert("@TempData["flight_added"]");
    </script>
}


<div class="container-fluid">
    <div class="main-content">
        <h1 class="text-center mb-4">Staff Management</h1>
        <div class="card shadow-sm">
            <div class="card-header  text-white">Edit Staff</div>
            <div class="card-body table-responsive">
               

                <form method="post" >
                    <input value="@Model.emp_data.Id" type="hidden" 
                    class="form-control" name="Id" id="name" />
                    <input value="@Model.emp_data.Status" type="hidden"

                           class="form-control" name="Status" id="name" />
                    <input value="@Model.emp_data.status_update" type="hidden"
                           class="form-control" name="status_update" id="name" />
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input value="@Model.emp_data.Name" type="text" class="form-control" name="Name" id="name"
                               required pattern="[A-Za-z0-9]{3,}"
                               title="Username must be at least 5 characters long and contain only letters and numbers."
                               placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label for="name">User Name</label>
                        <input type="text"
                               class="form-control" value="@Model.emp_data.Username" name="Username"
                           readonly    id="name" required title="Username must be at
least 5 characters long and contain only letters and numbers." placeholder="Enter Username">
                    </div>
                    
                    <div class="form-group">
                        <label for="name">Password</label>
                        <input type="text" readonly class="form-control" value="@Model.emp_data.Password" name="Password" id="name"
                               required title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter password">

                    </div>
                    <div class="form-group">
                        <label for="name">Email</label>
                        <input type="email" class="form-control" value="@Model.emp_data.Email" name="Email" id="name"
                               required title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter Email">
                    </div>
                    <div class="form-group">
                        <label for="name">Age</label>
                        <input type="text" value="@Model.emp_data.Age" class="form-control" name="Age" id="name" required placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label for="name">Password</label>
                        <input type="text" class="form-control" value="@Model.emp_data.Password" name="Password" id="name"
                               required title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter password">

                    </div>
                    <button type="submit" class="btn btn1 btn-block">Edit staff</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .main-content {
        max-width: 700px;
        margin: auto;
        padding: 20px;
    }

    .card {
        border-radius: 10px;
        border: none;
    }

    .card-header {
        font-size: 1.25rem;
        font-weight: bold;
        border-bottom: none;
        background-color: #28a745;
    }

    .card-body {
        padding: 30px;
    }

    .admin-form .form-group {
        margin-bottom: 20px;
    }

    .admin-form .form-control {
        border-radius: 5px;
        box-shadow: none;
        border-color: #ddd;
    }

        .admin-form .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn {
        border-radius: 5px;
    }

    .search-bar .form-control {
        border-right: none;
        border-radius: 5px 0 0 5px;
    }

    .search-bar .input-group-append .btn {
        border-left: none;
        border-radius: 0 5px 5px 0;
    }

    .btn-block {
        font-size: 1rem;
        padding: 10px;
    }

    }
</style>