@model Airlines_Booking.Models.mainmodel;

@{
    Layout = "../shared/_layout";
}<style>
     .page-title-area {
         background-image: url('/assets/images/userlogin.jpg');
     }

         .page-title-area h1 {
             color: black;
         }

         .page-title-area h6 {
             color: black;
         }
</style>
<div class="page-title-area position-relative z-1">
    <div class="container">
        <div class="page-title-content text-center">
            <h1>Histroy </h1>
            <h6 class="mx-auto">Welcome to Our World, Where Innovation Meets Purpose, and Possibilities Unfold.</h6>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="row justify-content-center">
        @foreach (var data in Model.booking_record)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card flight-card">
                   
                    <div class="card-body">
                        <h5 class="card-title">@data.name</h5>
                        <p class="flight-details"><strong>Ticket ID:</strong> @data.ticket_id</p>
                        <p class="flight-details"><strong>Category:</strong> @data.category</p>
                        <p class="flight-details"><strong>Number of Passengers:</strong> @data.Number_of_passengers</p>
                        <p class="flight-details"><strong>Price:</strong> <span class="price">@data.price</span></p>
                        <p class="flight-details"><strong>Arrived time:</strong> @data.timing</p>
                        <p class="flight-details"><strong>Baggage Weight:</strong> @data.barrage</p>
                        <p class="flight-details"><strong>Arrived Country:</strong> @data.Country</p>
                        <p class="flight-details"><strong>Arrived City:</strong> @data.city</p>
                        <p class="flight-details"><strong>Total:</strong> @data.total</p>

                        <p class="status">
                            <strong>Status:</strong>
                            @if (data.paid == "due")
                            {
                                <span class="badge bg-danger">Due</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Paid</span>
                            }
                        </p>

                        <p class="status">
                            <strong>Broadpass:</strong>
                            @if (data.broadpass == 0)
                            {
                                <span class="badge bg-secondary">Not Generated</span>
                            }
                            else
                            {
                                <span class="badge bg-primary">Generated</span>
                            }
                        </p>

                        <p class="approval">
                            <strong>booking status</strong>
                            @if (data.Status == 0)
                            {
                                <a href="@Url.Action("cancel_flight", "website", new { id = data})" class="btn  btn-danger">Cancel Flight</a>
                            }
                            else
                            {
                                <a href="@Url.Action("boradingpass", "website", new { id= data.myid})" class="btn  btn-success">Download Broading pass </a>

                            }
                        </p>

                        <div class="mt-3">
                           
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="container mt-5">
    <div class="row justify-content-center">
        @foreach (var data in Model.packages_booked)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card flight-card">

                    <div class="card-body">
                        <h5 class="card-title">@data.name</h5>
                        <p class="flight-details"><strong>Ticket ID:</strong> @data.ticket_id</p>
                        <p class="flight-details"><strong>Category:</strong> @data.category</p>
                        <p class="flight-details"><strong>Number of Passengers:</strong> @data.Number_of_passengers</p>
                        <p class="flight-details"><strong>Price:</strong> <span class="price">@data.price_package</span></p>
                    
                        <p class="flight-details"><strong>Total:</strong> @data.total</p>
                        @if (data.status == 0)
                        {
                            <p class="flight-details"><strong>status:</strong> <span class="price">Pending</span></p>
                            <a href="@Url.Action("cancel_packages", "website", new { id = data.booked_Id})" class="btn  btn-danger">Cancel </a>
                        }
                        else
                        {
                            <p class="flight-details"><strong>status:</strong> <span class="price">Approve</span></p>
                    
                            }


                        <div class="mt-3">
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@if (TempData["errorss"] != null)
{
    <h4 class="myheading">@TempData["errorss"]</h4>
}

<style>

    .flight-card {
        border: 2px solid #10b981;
        border-radius: 15px;
        padding: 20px;
        max-width: 350px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        font-family: Arial, sans-serif;
    }

    .badge {
        background-color: #10b981;
        color: #fff;
        padding: 5px 15px;
        font-size: 0.8rem;
        border-radius: 20px;
        margin-bottom: 15px;
        display: inline-block;
    }

    .flight-card h5 {
        font-weight: bold;
        font-size: 1.3rem;
        margin-bottom: 20px;
        color: #10b981;
    }

    .flight-details {
        font-size: 0.9rem;
        margin-bottom: 15px;
        color: #333;
    }

        .flight-details i {
            margin-right: 10px;
            color: #10b981;
        }

        .flight-details span {
            font-weight: bold;
            color: #000;
        }

    .price {
        background-color: #10b981;
        color: #fff;
        text-align: center;
        padding: 12px;
        border-radius: 10px;
        margin-top: 20px;
        font-size: 1rem;
        font-weight: bold;
    }

    .status {
        font-weight: bold;
        color: #e3342f;
        font-size: 1rem;
        margin-top: 15px;
    }

    .approval {
        margin-top: 20px;
        font-size: 0.95rem;
        color: #333;
        padding: 10px;
        background-color: #e6fffa;
        border-left: 5px solid #10b981;
        border-radius: 5px;
    }.myheading{
        text-align:center;
        color:red;
    }

</style>