<div class="page-title-area position-relative z-1">
    <div class="container">
        <div class="page-title-content text-center">
            <h1>Track Filght </h1>
            <h6 class="mx-auto">Welcome to Our World, Where Innovation Meets Purpose, and Possibilities Unfold.</h6>
        </div>
    </div>
</div>
<br />


<form>
    <input name="textsraech" placeholder="Enter your Ticket id or Name" />
     <button type="submit">sreach</button>
</form>
<div class="container mt-5">
    <div class="row">
        @foreach (var data in Model.booking_record)
        {
            <div class="col-md-4 mb-4">
                <div class="flight-card">
                    <div class="badge">@data.category</div>
                    <h5>@data.name</h5>
                    <div class="flight-details">
                        <p><i class="fas fa-ticket-alt"></i> Ticket ID: <span>@data.ticket_id</span></p>
                        <p><i class="fas fa-users"></i> Number of Passengers: <span>@data.Number_of_passengers</span></p>
                        <p><i class="fas fa-clock"></i> Arrived Time: <span>@data.timing</span></p>
                        <p><i class="fas fa-weight"></i> Baggage Weight: <span>@data.barrage</span></p>
                        <p><i class="fas fa-plane-arrival"></i> Arrived Country: <span>@data.Country</span></p>
                        <p><i class="fas fa-city"></i> Arrived City: <span>@data.city</span></p>
                    </div>
                    <div class="price">Total: PKR <span>@data.total</span></div>
                    <div class="status">Status: @data.paid</div>
                    <div class="status">Broadpass: @(data.broadpass == 0 ? "Not Generated" : "Generated")</div>
                    <div class="approval">
                        Approval: @(data.broadpass == 0 ? "Broadening pass is not generated." : "Your flight is booked, please reach the airport on time.")
                    </div>
                    <div class="mt-3">
                        @if (data.broadpass == 0)
                        {
                            <p class="text-danger">Broadening pass is not generated.</p>
                        }
                        else
                        {
                            <span class="badge bg-primary">Generated</span>
                        }
                        @if (data.Status == 0)
                        {
                            <a href="@Url.Action("cancel_flightairlines", "website", new { id = data.myid })" class="btn btn-danger mt-2">Cancel Flight</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

