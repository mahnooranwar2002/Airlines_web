@* for add *@

<div class="modal fade" id="addPassengerModal" tabindex="-1" aria-labelledby="addPassengerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPassengerModalLabel">Add New Flight</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="add_flight" asp-controller="admin" id="dateForm">

                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" name="Name" id="name" required  title="flight must be at least 5 characters long and contain only letters and numbers." placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label for="name"> Price</label>
                        <input type="text" class="form-control" name="Price" id="name" pattern="[0-9]{3,}" required placeholder="Enter price">
                    </div>
                   
                    <div class="form-group">
                        <label for="name">Timing</label>
                        <input type="time" class="form-control" name="Timing" id="name" required title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label for="name">Arrived time</label>
                        <input type="time" class="form-control" name="arrived_time" id="name" required title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter name">
                    </div>

                    <div class="form-group">
                        <label for="name">Date</label>
                        <input type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" name="airline_date"  required >
                    </div>
                     <div class="form-group">
                        <label for="name">Seat for Economy Class</label>
                        <input type="text" class="form-control" name="economy_seats" id="dateInput" required title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter name">
                    </div>
                     <div class="form-group">
                        <label for="name">Seat for Business Class</label>
                        <input type="text" class="form-control" name="busneiss_seats" id="dateInput" required title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter name">
                    </div>
                    
                        <div class="form-group">
                            <label for="name">Departure</label>
                            <select id="gender" name="city_id" required>
