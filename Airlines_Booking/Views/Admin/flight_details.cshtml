            </div>
        </div>
    </div>
</div>
<div class="container-fluid ">
    <div class="main-content">
        <h1>Flight Management</h1>
        <div class="card">
            <div class="card-header">Flights List</div>
            <div class="card-body table-responsive">

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="input-group" style="flex: 1;">
                        <form class="d-flex w-100">
                            <input type="text" class="form-control" name="textsearch" id="searchPassenger" placeholder="Search for Flight by flight NO...">
                            <div class="input-group-append">
                                <button class="btn btn1" type="submit">Search</button>
                            </div>
                        </form>
                    </div>
                    <button class="btn btn1 ml-3" data-toggle="modal" data-target="#addPassengerModal">Add Flights</button>
                </div>


                <table class="table table-striped">
                    <thead>
                        <tr>

                            <th> flight No</th>
                            <th> Price</th>
                           
                            <th> Seats</th>
                          
                            <th>Status</th>
                            <th class="thend" style="padding-right:3%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var data in Model.flight_record)
                        {
                            <tr>
                                <td>@data.Name</td>
                                <td>@data.Price</td>
                                @* <td>@data.country.Name</td>
                                <td>@data.travel_to</td> *@
                           
                               
                               @*  <td>@data.plane.plan_name</td> *@
                               
                                <td>@data.seat_avaiable</td>
                              @*   <td>@data.city.city_name</td> *@
                            
                               
                                <td>
                                    @if (data.Status == 0)
                                    {
                                        <span>Deactivate</span>
                                    }
                                    else
                                    {
                                        <span class="thend">Activate</span>
                                    }
                                </td>

                                <td class="thend">
                                    <button class="btn btn-primary btn-sm" title="Status">
                                        <a style="color:white;" href="@Url.Action("status_flight", "admin", new { id = data.Id })">
                                            <i class="fas fa-toggle-on"></i>
                                        </a>
                                    </button>
                                    <button class="btn btn-success btn-sm" id="edit">
                                        <a style="color:white;"
                                           href="@Url.Action("update_flight","admin",new{id=data.Id})">
                                            <i class="fas fa-edit"></i>
                                        </a>


                                    </button>
                                    <button class="btn btn-danger btn-sm" onclick="confirmDelete('P1')">
                                        <a style="color:white;" href="@Url.Action("flight_data","admin",new{id=data.Id})">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </button>
                                    <button class="btn btn-danger btn-sm" onclick="confirmDelete('P1')">
                                        <a style="color:white;" href="@Url.Action("delete_flight","admin",new{id=data.Id})">     
                                            <i class="fas fa-trash-alt"></i>
                                            
                                        
                                        </a>
                                    </button>
                                </td>
                            </tr>
                        }



                    </tbody>
                </table>
                @if (TempData["msg"] != null)
                {
                    <h4 style="color:red;text-align:center;">@TempData["msg"]</h4>
                }
            </div>
        </div>
    </div>
</div>


