@model Airlines_Booking.Models.mainmodel;


@{
    Layout = "../shared/adminDashboard_layout.cshtml";
}
@if (TempData["flight_added"] != null)
{
    <script>
        alert("@TempData["flight_added"]");
    </script>
}
@* for add *@







<div class="container-fluid">
    <div class="main-content">
        <h1 class="text-center mb-4">Flight Management</h1>
        <div class="card shadow-sm">
            <div class="card-header  text-white">Edit Flight</div>
            <div class="card-body table-responsive">
              

                <form method="post">
                    <div class="form-group">
                        <input type="hidden" name="Id" value="@Model.flight_data.Id" />
                        <input type="hidden" name="city_id" value="@Model.flight_data.city_id" />
                        <input type="hidden" name="travel_to" value="@Model.flight_data.travel_to" />
                        <input type="hidden" name="travel_from" value="@Model.flight_data.travel_from" />
                        <input type="hidden" name="arrived_time" value="@Model.flight_data.arrived_time"/>
                        <input type="hidden" name="cities" value="@Model.flight_data.cities" />
                        <input type="hidden" name="seat_avaiable" value="@Model.flight_data.seat_avaiable" />
                        <input type="hidden" name="Plane_id" value="@Model.flight_data.Plane_id" />
                        <input type="hidden" name="airline_date" value="@Model.flight_data.airline_date" />
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" value="@Model.flight_data.Name" class="form-control" name="Name" id="name" required pattern="[A-Za-z0-9]{3,}" title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter name">
                        </div>
                        <div class="form-group">
                            <label for="name"> Price</label>
                            <input type="text" value="@Model.flight_data.Price" class="form-control" name="Price" id="name" required title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter name">
                        </div>
                            <input type="hidden" value="@Model.flight_data.Seats" class="form-control" name="Seats" id="name" required title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter name">
                        <div class="form-group">
                            <label for="name">seats for economy class</label>
                            <input  type="text" value="@Model.flight_data.economy_seats" class="form-control" name="economy_seats" id="name" required title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter name">
                        </div> <div class="form-group">
                            <label for="name">seats for busniess class</label>
                            <input  type="text" value="@Model.flight_data.busneiss_seats" class="form-control" name="busneiss_seats" id="name" required title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter name">
                        </div>
                        <div class="form-group">
                            <label for="name">timing</label>
                            <input readonly type="text" value="@Model.flight_data.Timing" class="form-control" name="Timing" id="name" required title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter name">
                        </div>
                        <div class="form-group">
                            <label for="name">Duration</label>
                            <input readonly type="text" value="@Model.flight_data.duration" class="form-control" name="duration" id="name" required title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter name">
                        </div>

                        <div class="form-group">
                            <label for="name">Date</label>
                            <input type="date" min="@DateTime.Now.ToString("yyyyy-MM-DD")" class="form-control" name="airline_date" id="name" title="Username must be at least 5 characters long and contain only letters and numbers." placeholder="Enter name">
                        </div>




                        </div>
                    <div class="button-container">
                        <button type="submit" class="btn btn1 btn-update">Update flights</button>
                        <button class="btn btn-danger btn-delete "><a href="@Url.Action("flight_details","admin")">back</a></button>
            </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .button-container {
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        color: white;
    }

    .btn-update {
        background-color: #10b981;
        flex: 1;
    }

    .btn-delete {
        background-color: #dc3545;
        flex: 0 0 70px;
    }

        .btn-delete a {
            color: white;
            text-decoration: none;
        }
    .main-content {
        max-width: 700px;
        margin: auto;
        padding: 20px;
    }

    .card {
        border-radius: 10px;
        border: none;
    }

    .card-header {
        font-size: 1.25rem;
        font-weight: bold;
        border-bottom: none;
        background-color: #28a745;
    }

    .card-body {
        padding: 30px;
    }

    .admin-form .form-group {
        margin-bottom: 20px;
    }

    .admin-form .form-control {
        border-radius: 5px;
        box-shadow: none;
        border-color: #ddd;
    }

        .admin-form .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn {
        border-radius: 5px;
    }

    .search-bar .form-control {
        border-right: none;
        border-radius: 5px 0 0 5px;
    }

    .search-bar .input-group-append .btn {
        border-left: none;
        border-radius: 0 5px 5px 0;
    }

    .btn-block {
        font-size: 1rem;
        padding: 10px;
    }

    }
</style>
