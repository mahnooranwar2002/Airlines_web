 @model Airlines_Booking.Models.mainmodel;

@{
    Layout = "../shared/adminDashboard_layout.cshtml";
}

<div class="container-fluid ">
    <div class="main-content">
        <h1>User Management</h1>
        <div class="card">
            <div class="card-header">User List</div>
            <div class="card-body table-responsive">

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <form class="d-flex" style="flex: 1;">
                        <input type="text" class="form-control" name="textsearch" id="searchPassenger" placeholder="Search for user by name or email ...">
                        <button class="btn btn1 ml-2" type="submit">Search</button>
                    </form>
                    
                </div>

        
                        <table class="table table-striped" >
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>email</th>
                                    <th>Password</th>
                                    <th>Status</th>

                            <th style="padding-right:3.5%; text-align:end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            
                        @foreach(var data in Model.user_record)
                        {
                            <tr>
                                <td>@data.user_name</td>
                                <td>@data.user_email</td>
                                <td>@data.user_password</td>

                                <td>@data.status_update</td>

                                <td class="thend">
                                    <button class="btn btn-danger btn-sm" onclick="confirmDelete('P1')" title="Delete">
                                        <a style="color:white;" href="@Url.Action("user_delete", "admin", new { id = data.id })">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </button>

                                    <button class="btn btn-primary btn-sm" title="Status">
                                        <a style="color:white;" href="@Url.Action("user_status", "admin", new { id = data.id })">
                                            <i class="fas fa-toggle-on"></i>
                                        </a>
                                    </button>
                                </td>

                            </tr>
                        }
                       
                               
                             
                            </tbody>
                        </table>
                @if (TempData["msg"] != null)
                {
                    <h4 style="color:red;text-align:center;">@TempData["msg"]</h4>
                }
            </div>
                </div>
            </div>
        </div>
<style>
    .thend {
        text-align: end;
    }
</style>